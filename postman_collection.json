							"  const jsonData = JSON.parse(jsonString);\r",
							"\r",
							"  if (jsonData.token) {\r",
							"    pm.collectionVariables.set('jwt_token', jsonData.token);\r",
							"    console.log('✅ JWT stored:', jsonData.token);\r",
							"  } else {\r",
							"    console.warn('⚠️ Token not found in response');\r",
							"  }\r",
							"\r",
							"  if (jsonData.userId) {\r",
